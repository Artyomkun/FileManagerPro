<UserControl xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                x:Class="FileManager.Viewers.FileViewer">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="_lblInfo" Grid.Row="0" Margin="10" FontWeight="Bold"/>
        
        <ScrollViewer Grid.Row="1" Margin="10"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="_textContent"
                    FontFamily="Monospace, Consolas, Courier New"
                    AcceptsReturn="True" AcceptsTab="True"
                    TextWrapping="Wrap"/>
        </ScrollViewer>
        
        <ProgressBar x:Name="_progressBar" Grid.Row="1" Height="5" 
                    IsIndeterminate="True" IsVisible="False"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="10" Spacing="10">
            <Button x:Name="_btnSave" Content="Сохранить" IsEnabled="False"/>
            <Button x:Name="_btnClose" Content="Закрыть"/>
        </StackPanel>
    </Grid>
</UserControl>