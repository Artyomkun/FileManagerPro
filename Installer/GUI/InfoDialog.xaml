<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="n8n.FileManager.Dialogs.FileSystemInfoDialog"
        Title="File System Information"
        Width="600"
        Height="500"
        MinWidth="500"
        MinHeight="400"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Background="#f0f0f0" Padding="10" Grid.Row="0">
            <TextBlock Text="File System Information" 
                       FontSize="16" 
                       FontWeight="Bold"/>
        </Border>
        
        <!-- Main Content ScrollViewer -->
        <ScrollViewer Grid.Row="1" Margin="0,10,0,0">
            <StackPanel Spacing="8">
                <!-- Path Info -->
                <TextBlock x:Name="txtPath" TextWrapping="Wrap" FontWeight="SemiBold"/>
                
                <!-- File System Info -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Column 0: Labels -->
                    <TextBlock Text="File System:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBlock Text="Permissions:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBlock Text="Owner:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBlock Text="Group:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBlock Text="Total Size:" Grid.Row="4" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBlock Text="Total Items:" Grid.Row="5" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBlock Text="Files:" Grid.Row="6" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBlock Text="Directories:" Grid.Row="7" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBlock Text="Inodes:" Grid.Row="8" Grid.Column="0" Margin="0,0,10,0"/>
                    
                    <!-- Column 1: Values -->
                    <TextBlock x:Name="txtFileSystem" Grid.Row="0" Grid.Column="1"/>
                    <TextBlock x:Name="txtPermissions" Grid.Row="1" Grid.Column="1"/>
                    <TextBlock x:Name="txtOwner" Grid.Row="2" Grid.Column="1"/>
                    <TextBlock x:Name="txtGroup" Grid.Row="3" Grid.Column="1"/>
                    <TextBlock x:Name="txtTotalSize" Grid.Row="4" Grid.Column="1"/>
                    <TextBlock x:Name="txtTotalFiles" Grid.Row="5" Grid.Column="1"/>
                    <TextBlock x:Name="txtFileCount" Grid.Row="6" Grid.Column="1"/>
                    <TextBlock x:Name="txtDirCount" Grid.Row="7" Grid.Column="1"/>
                    <TextBlock x:Name="txtInodeInfo" Grid.Row="8" Grid.Column="1"/>
                </Grid>
                
                <!-- Error Message -->
                <TextBlock x:Name="txtError" 
                           Foreground="Red" 
                           TextWrapping="Wrap"
                           IsVisible="False"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Button Row -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10"
                    Grid.Row="2"
                    Margin="0,20,0,0">
            <Button x:Name="btnRefresh" 
                    Content="Refresh" 
                    Width="80"/>
            <Button x:Name="btnExportJson" 
                    Content="Export JSON" 
                    Width="100"/>
            <Button x:Name="btnClose" 
                    Content="Close" 
                    Width="80"/>
        </StackPanel>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#f5f5f5" 
                Margin="-10,10,-10,-10" 
                Padding="10">
            <TextBlock Text="Ready" 
                       FontStyle="Italic" 
                       Foreground="Gray"/>
        </Border>
    </Grid>
</Window>