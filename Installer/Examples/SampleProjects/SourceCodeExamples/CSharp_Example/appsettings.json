{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "System": "Warning"
        },
        "Console": {
            "Enabled": true,
            "IncludeScopes": true
        },
        "File": {
            "Path": "logs/fileoperations.log",
            "MaxSizeMB": 10,
            "RetentionDays": 30
        }
    },
    "FileOperations": {
        "BufferSize": 81920,
        "MaxRetryCount": 3,
        "RetryDelayMs": 100,
        "EnableProgressReporting": true,
        "UseRecycleBin": true,
        "DefaultEncoding": "UTF-8"
    },
    "Security": {
        "EnableFileHashing": true,
        "HashAlgorithm": "SHA256",
        "EnableEncryption": false
    }
}