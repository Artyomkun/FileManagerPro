# FileManagerPro - Environment Configuration
# ==========================================

# Application Settings
APP_NAME=FileManagerPro
APP_VERSION=1.0.0
APP_ENVIRONMENT=development  # development | testing | production

# File System Settings
DEFAULT_WORKING_DIR=%USERPROFILE%\Documents\FileManager
MAX_FILE_SIZE_MB=1024
ALLOWED_FILE_EXTENSIONS=.txt,.pdf,.doc,.docx,.jpg,.png
TEMP_DIR=%TEMP%\FileManagerPro

# Logging Configuration
LOG_LEVEL=DEBUG  # DEBUG | INFO | WARN | ERROR
LOG_FILE_PATH=%APPDATA%\FileManagerPro\logs
LOG_MAX_SIZE_MB=10
LOG_RETENTION_DAYS=30

# User Interface
UI_THEME=dark 
UI_LANGUAGE=ru-RU
UI_SHOW_HIDDEN_FILES=false
UI_DEFAULT_VIEW=list

# Security Settings
ENABLE_FILE_HASH_CHECK=true
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_MINUTES=30

# Network Settings
PROXY_SERVER=
PROXY_PORT=
ENABLE_UPDATE_CHECK=true
UPDATE_CHECK_INTERVAL_HOURS=24

# Database/Storage
DATA_STORAGE_PATH=%APPDATA%\FileManagerPro\data
USE_ENCRYPTED_STORAGE=false
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6

# Performance Settings
MAX_THREADS=4
CACHE_ENABLED=true
CACHE_SIZE_MB=100
PRELOAD_DIRECTORY_INFO=true

# Platform Specific
# Windows
WINDOWS_USE_NATIVE_API=true
WINDOWS_SHELL_INTEGRATION=true

# Linux/Mac
UNIX_FILE_PERMISSIONS=755
USE_FUSE_IF_AVAILABLE=true
